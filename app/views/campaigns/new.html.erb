<div class='row'>
  <div class='col-xs-offset-1 col-sm-offset-1 col-xs-4 col-sm-4'>
    <h1>New Campaign</h1>
  </div>
</div>

<%= simple_form_for @campaign do |f| %>
<div class='row'>
  <div class='col-xs-offset-1 col-sm-offset-1'>
    <%= f.input :title %>
  </div>
</div>
<div class='row'>
  <div class='col-xs-offset-1 col-sm-offset-1'>
    <%= f.input :description, input_html: {rows: 8} %>
  </div>
</div>
<div class='row'>
  <div class='col-xs-offset-1 col-sm-offset-1'>
    <%= f.input :goal %>
  </div>
</div>
<div class='row'>
  <div class='col-xs-offset-1 col-sm-offset-1'>
    <%= f.input :end_date %>
  </div>
</div>

<div class='row'>
  <div class='col-xs-offset-1 col-sm-offset-1'>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
</div>
<%end%>
